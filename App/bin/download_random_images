#!/bin/bash

bin_dir=$(cd `dirname $0`; pwd)
images_dir=$bin_dir/../src/autogenerated/images_dir

rm -rfv "$images_dir"
mkdir -p "$images_dir"

index_js="$images_dir/index.js"

echo "export default [" >> "$index_js"
for i in {0..999}; do
  id=`printf "%04d" $i`
  echo $id
  curl -o "$images_dir/$id.jpg" "http://lorempixel.com/50/50/"
  echo "  require('./$id.jpg')," >> "$index_js"
done
echo "];" >> "$index_js"
